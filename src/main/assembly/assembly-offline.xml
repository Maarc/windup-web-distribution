<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

    <id>with-authentication</id>
    <formats>
        <format>zip</format>
    </formats>

    <baseDirectory>${project.build.finalName}</baseDirectory>

    <!-- Add distribution files -->
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/wildfly-${version.wildfly}</directory>
            <outputDirectory></outputDirectory>
            <excludes>
                <exclude>**/keycloak.lock.db</exclude>
                <exclude>bin/standalone.conf</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory></outputDirectory>
            <filtered>true</filtered>
            <includes>
               <include>/rhamt-version.txt</include>
               <include>/README.txt</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory></outputDirectory>
            <filtered>false</filtered>
            <includes>
                <include>**</include>
            </includes>
            <excludes>
               <exclude>/rhamt-version.txt</exclude>
               <exclude>/README.txt</exclude>
            </excludes>
        </fileSet>
        <!-- Add the overlay files -->
        <fileSet>
            <directory>src/main/wildfly_overlay</directory>
            <outputDirectory></outputDirectory>
            <filtered>false</filtered>
        </fileSet>
    </fileSets>
    <!-- Override the login.ftl with the autologin one -->
    <files>
        <file>
            <source>src/main/wildfly_overlay/themes/base/login/auto_login.ftl</source>
            <outputDirectory>themes/base/login</outputDirectory>
            <destName>login.ftl</destName>
            <filtered>false</filtered>
        </file>
        <file>
            <source>src/main/wildfly_overlay/standalone/deployments/rhamt-web.war/auto_index.html.ftl</source>
            <outputDirectory>standalone/deployments/rhamt-web.war/</outputDirectory>
            <destName>index.html.ftl</destName>
            <filtered>false</filtered>
        </file>
        <file>
            <source>src/main/wildfly_overlay/standalone/deployments/rhamt-web.war/index.html.ftl</source>
            <outputDirectory>standalone/deployments/rhamt-web.war/</outputDirectory>
            <destName>regular_index.html.ftl</destName>
            <filtered>false</filtered>
        </file>
    </files>

</assembly>
